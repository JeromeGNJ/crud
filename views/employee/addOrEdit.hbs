<h3>{{viewTitle}}</h3>
  <form id="frmUploader" enctype="multipart/form-data" action="api/Upload/" method="post">
        <input type="file" name="imgUploader" multiple />
        <input type="submit" name="submit" id="btnSubmit" value="Upload" /> </form>
<form action="/employee" method="POST" autocomplete="on">
    <div class="form-group">
        <input hidden type='text' name='_id' value={{employee._id}}>
        <label>Name *</style></label>
        <input type="text" class="form-control" name="fullName" placeholder="Full Name" value="{{employee.fullName}}">
        <div class="text-danger">
            {{employee.fullNameError}}</div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Salary *</label>
            <input type="number" class="form-control" name="salary" placeholder="salary" value="{{employee.salary}}">
            <div class="text-danger">
                {{employee.salaryError}}</div>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>DOB *</label>
            <input type="date" class="form-control" name="dob" placeholder="dob" value="{{employee.dob}}">
            <div class="text-danger">
                {{employee.dobError}}</div>
        </div>
    </div>
    <div class="form-row">
    <!--    <div class="form-group col-md-6">
            <label>Photo (optional)</label>
            <input type="file" accept=".png, .jpg, .jpeg" class="form-control" name="photo" placeholder="photo"
                value="{{employee.photo}}">
        </div> -->
   
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Skills *</label>
            <fieldset>
                <input type="checkbox" name="skillset" value="Python">Python<br>
                <input type="checkbox" name="skillset" value="NodeJS">NodeJS<br>
                <input type="checkbox" name="skillset" value="Angular">Angular<br>
                <input type="checkbox" name="skillset" value="R">R<br>
                <input type="checkbox" name="skillset" value="Javascript">Javascript<br>
                <input type="checkbox" name="skillset" value="HTML">HTML<br>
                <input type="checkbox" name="skillset" value="CSS">CSS<br>
                <input type="checkbox" name="skillset" value="Java">Java<br>
                <input type="checkbox" name="skillset" value="React">React<br>
                <input type="checkbox" name="skillset" value="Kotlin">Kotlin<br>
                <br>
            </fieldset>
             <div class="text-danger">
                {{employee.skillsError}}</div>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success" name='info' value={{bttn}}>{{bttn}}</button>
        <a class="btn btn-dark" href="/employee/list"> View All <i class="fa fa-chevron-right"></i></a>
        <a {{del}} ngIf='!bttn"' class="btn btn-danger" href="/employee/delete/{{employee._id}}"
            onclick="return confirm('Are you sure to delete this record ?');">Delete</a>
    </div>
</form>